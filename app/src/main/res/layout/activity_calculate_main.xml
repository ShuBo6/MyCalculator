<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateMain">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="354dp"
        android:layout_height="366dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/CE_btn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="CE" />

        <Button
            android:id="@+id/BACK"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="BACK"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/chu"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="รท"
            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/chuquyu"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="%"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/cheng"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="ร"
            app:layout_column="4"
            app:layout_row="1" />

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="6"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/jia"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="."
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/num0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/dengyu"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="="
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/jian"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="-"
            app:layout_column="4"
            app:layout_row="3" />

        <ImageButton
            android:id="@+id/my_logo"
            android:layout_width="90dp"
            android:layout_height="70dp"
            app:layout_column="4"
            app:layout_row="4"
            app:srcCompat="@mipmap/my_logo" />
    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/mintor"
        android:layout_width="364dp"
        android:layout_height="114dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>